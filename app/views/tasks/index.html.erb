<div data-controller="task-form">
    <form data-action="submit->task-form#submit" data-task-form-target="form" method="post" action="/tasks">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <input type="text" name="task[name]" placeholder="タスクを入力" required>
        <button type="submit">タスクを追加</button>
    </form>
    <turbo-frame id="task-list">
        <ul>
            <%= render partial: 'tasks/task', collection: @tasks, as: :task %>
        </ul>
    </turbo-frame>

</div>
